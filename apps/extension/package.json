{
  "name": "@nestwallet/extension",
  "version": "1.1.14",
  "description": "Nest Wallet - The Ultimate Trading Wallet",
  "author": "NestWallet",
  "main": "index.js",
  "scripts": {
    "start": "export BROWSER=none; concurrently 'yarn expo:start' 'yarn ext:start'",
    "build": "yarn expo:build && yarn ext:build && ./script/root-background-fix.sh",
    "expo:start": "expo start --web",
    "expo:build": "expo export:web",
    "ext:start": "webpack serve --config webpack.config.ext.js --env dev",
    "ext:build": "webpack build --config webpack.config.ext.js --env production",
    "ext:build:mobile": "yarn ext:build && cp web-build/injected.js ../mobile/assets/scripts/injected.script",
    "compile": "tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/pro-light-svg-icons": "6.4.0",
    "@fortawesome/pro-solid-svg-icons": "6.4.0",
    "@hello-pangea/dnd": "^16.6.0",
    "@metamask/browser-passworder": "4.1.0",
    "@nestwallet/app": "*",
    "@react-navigation/native": "6.1.8",
    "@react-navigation/stack": "6.3.18",
    "@solana/wallet-standard-features": "^1.2.0",
    "@wallet-standard/base": "^1.0.1",
    "@wallet-standard/features": "^1.0.3",
    "ethers": "6.10.0",
    "eventemitter3": "5.0.0",
    "expo": "49.0.23",
    "html2canvas": "^1.4.1",
    "nativewind": "2.0.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.10",
    "react-native-gesture-handler": "2.12.1",
    "react-native-web": "0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/runtime": "7.21.0",
    "@expo/webpack-config": "19.0.0",
    "@types/chrome": "^0.0.263",
    "@types/node": "^22.7.5",
    "@types/react": "18.2.14",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^3.4.0",
    "@types/webpack-config-utils": "2.3.1",
    "autoprefixer": "^10.4.14",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "8.0.1",
